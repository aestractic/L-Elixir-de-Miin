---

<section id="treatments" class="w-full py-12 md:py-24 lg:py-32 bg-dark relative overflow-hidden">
  <div class="absolute -bottom-[30%] left-[10%] w-[60%] h-[60%] rounded-full bg-gradient-to-tr from-primary/10 to-secondary/5 blur-[100px]"></div>
  <div class="container px-4 md:px-6 relative z-10">
    <h2 class="text-2xl font-light tracking-wider sm:text-3xl md:text-4xl mb-8 text-center text-light">
      Faciales
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {treatments.map((treatment) => (
        <div class="bg-dark-lighter border-none shadow-lg backdrop-blur-sm bg-opacity-80 overflow-hidden">
          <img
            src={treatment.image}
            alt={treatment.name}
            width="400"
            height="300"
            class="w-full object-cover h-48"
          />
          <div class="p-4">
            <h3 class="text-xl font-serif font-medium mb-2 text-light tracking-wide">{treatment.name}</h3>
            <p class="text-light-muted text-sm mb-3 font-light leading-relaxed">{treatment.description}</p>
            <div class="mb-2">
              <p class="text-primary text-sm font-medium italic mb-2">Beneficios:</p>
              <ul class="text-primary text-sm list-disc list-inside space-y-1">
                {treatment.benefits.map((benefit) => (
                  <li class="font-light">{benefit}</li>
                ))}
              </ul>
            </div>
          </div>
          <div class="p-4 pt-0">
            <button
              data-treatment={treatment.name}
              class="w-full rounded-none border border-primary bg-transparent py-2 text-primary hover:bg-primary hover:text-dark transition-colors book-consultation font-serif font-light"
            >
              Consulta de libro
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 