---
import Calendar from './Calendar.astro';
---

<section id="schedule" class="w-full py-12 md:py-24 lg:py-32 bg-dark-lighter relative overflow-hidden">
  <div class="absolute top-[20%] right-[10%] w-[40%] h-[40%] rounded-full bg-gradient-to-bl from-primary/15 to-secondary/5 blur-[80px]"></div>
  <div class="container mx-auto px-4 relative">
    <div class="w-full max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-light text-light mb-4">Schedule Your Session</h2>
        <p class="text-light-muted max-w-2xl mx-auto">
          Choose a date that works best for you and connect with us via WhatsApp to confirm your appointment.
        </p>
      </div>
      
      <Calendar />
    </div>
  </div>
</section> 